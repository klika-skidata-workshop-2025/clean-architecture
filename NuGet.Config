<?xml version="1.0" encoding="utf-8"?>
<!--
  NuGet Configuration for the Skidata Workshop

  This configuration file sets up package sources for the workshop:
  1. NuGet.org - for public packages (MediatR, FluentValidation, etc.)
  2. GitHub Packages - for workshop-specific packages (Workshop.Common, Workshop.Proto, etc.)

  To authenticate with GitHub Packages:
  1. Generate a Personal Access Token (PAT) with 'read:packages' and 'write:packages' scopes
  2. Set environment variable: GITHUB_TOKEN=your_token_here
  3. Or use: dotnet nuget add source with username and password options
-->
<configuration>
  <packageSources>
    <!-- Clear any inherited sources to have full control -->
    <clear />

    <!-- Local packages - for development and CI/CD before publishing to GitHub Packages -->
    <add key="local" value="./local-packages" />

    <!-- NuGet.org - official NuGet package source -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />

    <!-- GitHub Packages - workshop-specific packages -->
    <add key="github" value="https://nuget.pkg.github.com/klika-skidata-workshop-2025/index.json" />
  </packageSources>

  <packageSourceCredentials>
    <github>
      <!--
        GitHub authentication
        The GITHUB_TOKEN environment variable should contain your Personal Access Token

        To set the token:
        Windows PowerShell: $env:GITHUB_TOKEN="your_token_here"
        Linux/macOS: export GITHUB_TOKEN="your_token_here"
      -->
      <add key="Username" value="klika-skidata-workshop-2025" />
      <add key="ClearTextPassword" value="%GITHUB_TOKEN%" />
    </github>
  </packageSourceCredentials>

  <config>
    <!-- Set global packages folder (optional, commented out by default) -->
    <!-- <add key="globalPackagesFolder" value="packages" /> -->
  </config>
</configuration>
